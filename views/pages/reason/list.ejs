<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista powodów</h2>
    <table class="table-list">
        <thead>

        <tr>
            <th>Typ nieobecności</th>
            <th>% Wynagrodzenia</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let reason of reasons) { %>
            <tr>
                <td><%= reason.Name %></td>
                <td><%= reason.SalaryPercentage %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/reason/details/<%= reason.IdReason %>" class="list-actions-button-details">Szczegóły</a>
                            <a href="/reason/edit/<%= reason.IdReason %>" class="list-actions-button-edit">Edytuj</a>
                            <a href="/reason/delete/<%= reason.IdReason %>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/reason/add" class="button-add">Dodaj nowy powód</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>
