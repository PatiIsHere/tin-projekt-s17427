<%- include('../../fragments/header.ejs') %>

<main>
    <script type="application/javascript" src="/js/validationEmpForm.js"></script>
    <script type="application/javascript" src="/js/validationCommon.js"></script>
    <h2><%= pageTitle %></h2>

    <form class="form" method="post" action="<%= formAction %>" novalidate onsubmit="return validateForm();">
        <input type="hidden" name="IdReason" value="<%= reason.IdReason %>">

        <label for="reasonName">Typ nieobecności: <span class="symbol-required">*</span></label>
        <input type="text" name="Name" id="Name" value="<%= reason.Name %>"
                <%= (formMode == 'showDetails') ? 'disabled' : '' %> required/>
        <span id="errorreasonName" class="errors-text"></span>

        <label for="salaryPercentage">% Wynagrodzenia: <span class="symbol-required">*</span></label>
        <input type="number" name="SalaryPercentage" id="SalaryPercentage" value="<%= reason.SalaryPercentage %>"
                <%= (formMode == 'showDetails') ? 'disabled' : '' %> required/>
        <span id="errorsalaryPercentage" class="errors-percent"></span>

        <% if (formMode == 'showDetails') { %>
            <div class="section-buttons">
                <a href="/reason/edit/<%= reason.IdReason %>" class="action-button-gotoEdit">Edytuj</a>
            </div>
        <% } %>

        <% if (formMode == 'showDetails' || formMode == 'edit') { %>
            <h2>Nieobecności</h2>

            <table class="table-list">
                <thead>

                <tr>
                    <th>Pracownik</th>
                    <th class="non-essential-row">Data OD</th>
                    <th>Data DO</th>
                    <th>Akceptacja</th>
                </tr>
                </thead>
                <tbody>
                <% for (let e of reason.absences) { %>
                    <tr>
                        <td><a href="/employee/details/<%= e.employee.IdEmployee %>"><%= e.employee.Name + ', ' +
                                (e.employee.SecondName !== null ? e.employee.SecondName + ' ' : '')
                                + e.employee.Surname %></a></td>
                        <td class="non-essential-row"><%= e.DateFrom.toISOString().split('T')[0] %></td>
                        <td><%= e.DateTo.toISOString().split('T')[0] %></td>
                        <td class="non-essential-row"><%= e.IsAccepted === true ? 'Tak' : 'Nie' %></td>
                    </tr>
                <% } %>

                </tbody>
            </table>
        <% } %>

        <div class="form-buttons">
            <p id="errorSummary" class="errors-text"></p>
            <% if(formMode !== 'showDetails') { %>
                <input class="form-button-submit" type="submit" value="<%= btnLabel %>"/>
                <a class="form-button-cancel" href="/reason">Anuluj</a>
            <% } else { %>
                <a class="form-button-cancel" href="/reason">Powrót</a>
            <% } %>
        </div>

    </form>


</main>
<%- include('../../fragments/footer.ejs') %>